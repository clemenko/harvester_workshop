#!ipxe
dhcp
iflinkwait -t 5000 && echo Detected link on ${ifname} 
kernel https://equinixphilip.s3.amazonaws.com/harvester-v1.1.1-vmlinuz-amd64 ip=dhcp net.ifnames=1 rd.cos.disable rd.noverifyssl root=live:https://equinixphilip.s3.amazonaws.com/harvester-v1.1.1-rootfs-amd64.squashfs harvester.install.management_interface.interfaces="hwAddr:${net0/mac}" harvester.install.management_interface.method=dhcp harvester.install.management_interface.bond_options.mode=balance-tlb harvester.install.management_interface.bond_options.miimon=100 console=ttyS1,115200 harvester.install.automatic=true boot_cmd="echo include_ping_test=yes >> /etc/conf.d/net-online" harvester.install.config_url=https://metadata.platformequinix.com/userdata
initrd https://equinixphilip.s3.amazonaws.com/harvester-v1.1.1-initrd-amd64
boot
